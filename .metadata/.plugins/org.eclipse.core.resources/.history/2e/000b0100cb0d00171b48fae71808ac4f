	public static int validChoice(Scanner sc, String menu) {
  	  while (true) {
  		  System.out.print(menu);
  		  if (sc.hasNextInt()) {
  			  return sc.nextInt();
    		  }   
  		  System.out.println("Error! Invalid value. Try again.");
  		  sc.nextLine();
  	  }
    }
}


