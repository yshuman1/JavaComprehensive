
public class ThreadRunner extends Thread{
	String name = "";
	int restPercentage;
	int runnersSpeed;
	int distance;
	ThreadRunner() {
		
	}
	ThreadRunner(String name, int restPercent, int speed){
		this.name = name;
		this.restPercentage = restPercent;
		this.restPercentage = speed;
	}
	/*public void run() {
		System.out.println(this.getName() + " started.");
		for (distance = 0; distance <= 1000; distance += runnersSpeed){
			System.out.println(distance);
			//Thread.sleep(2000);
		}
		System.out.print(this.getName() + " finished.");
	}*/
	public void run() {
		if(Math.random() > restPercentage) {
			for (distance = 0; distance <= 1000; distance += runnersSpeed){
				System.out.println(distance);
				//Thread.sleep(2000);
			}
		}
	}
}
