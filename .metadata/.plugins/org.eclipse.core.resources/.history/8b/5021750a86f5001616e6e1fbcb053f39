import java.text.NumberFormat;

public class Account implements Bankable{
	double balance = 1000.00;
	double amount;
	final double INTEREST = 0.01;
	final double FEES = 12.00;
	NumberFormat cash = NumberFormat.getCurrencyInstance();
	@Override
	public double withdrawal() {
		return balance -= amount;
		
	}

	@Override
	public double deposit() {
		return balance += amount;
				
	}

	@Override
	public double calcInterest() {
		return balance * INTEREST;
		
		
	}

	@Override
	public double calcFees() {
		return FEES; 
		
	}

	@Override
	public void displayBalance() {
		System.out.println("Final Balances\nChecking: " +
				cash.format(balance + FEES));
		
	}

}
